# Django settings
SECRET_KEY=replace-with-your-django-secret-key
DEBUG=True  # Set to False in production
ALLOWED_HOSTS=localhost,127.0.0.1  # Comma-separated list

# Database
DATABASE_URL=postgres://username:password@localhost:5432/dbname  # Replace with your DB URL

# Redis (Channels/Cache)
REDISCLOUD_URL=redis://:password@localhost:6379  # Replace with your Redis URL

# Cloudinary (Media Storage)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name  # Replace with your Cloudinary URL

# Email (Optional)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# Other settings (add as needed)
# Example: SOCIAL_AUTH_GITHUB_KEY=your-github-client-id
# Example: SOCIAL_AUTH_GITHUB_SECRET=your-github-client-secret

